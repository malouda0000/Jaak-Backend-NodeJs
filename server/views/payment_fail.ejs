    <script>
        // appgrowth
        // const BASEURL = 'https://appgrowthcompany.com/genie';

        // live
        const BASEURL = process.env.BASE_URL||'https://genie.mt/genie';

        var userRole = getParameterByName('role',  window.location.href);
        if (userRole == 'sp') document.getElementById("fail_message").innerHTML="The â‚¬1 card verification transaction failed. Please try again.";
        else document.getElementById("fail_message").innerHTML="Your payment is failed!, try again later.";
        function onSubmit() {
            const role = getParameterByName('role', window.location.href);
            if (role && role.toLowerCase() == 'sp') {
                window.location.href = BASEURL + '/profile/account-info';
            } else {
                // window.location.href = 'https://genie.mt/';
                window.location.href = BASEURL + '/';
            }
        }
        function getParameterByName(name, url) {
            if (!url) url = window.location.href;
            name = name.replace(/[\[\]]/g, "\\$&");
            var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
            results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, " "));
        }
    </script>
